<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/startpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartPage">

    <ImageView
        android:id="@+id/startlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/welcome"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logostart"
        />

    <ImageView
        android:id="@+id/starttitle"
        android:layout_width="660dp"
        android:layout_height="657dp"
        android:layout_marginTop="-440dp"
        android:contentDescription="@string/welcome"
        app:layout_constraintTop_toBottomOf="@+id/startlogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/logotitle"
        tools:layout_editor_absoluteX="-125dp"
        />

    <TextView
        android:id="@+id/welcomebox"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/rounded_corners"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:text="Welcome"
        android:textSize="60sp"
        android:textColor="@color/black"
        android:fontFamily="@font/fredoka_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/welcometext"
        android:layout_width="407dp"
        android:layout_height="209dp"
        android:layout_marginBottom="200dp"
        android:fontFamily="@font/fredoka_light"
        android:gravity="center"
        android:text="Step into SnapVault, where every moment is more than just a picture it’s a memory preserved. Let’s start creating beautiful, organized albums that you can relive anytime."
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="4dp" />

    <Button
        android:id="@+id/signinbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="94dp"
        android:backgroundTint="@color/darkgreen"
        android:text="Sign in"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="30dp"/>

    <Button
        android:id="@+id/signupbuttongreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="94dp"
        android:backgroundTint="@color/lightergreen"
        android:text="Sign up"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>