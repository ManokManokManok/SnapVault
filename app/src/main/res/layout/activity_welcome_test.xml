<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="600dp"
            android:layout_height="600dp"
            android:alpha="0.1"
            android:scaleType="fitXY"
            android:src="@drawable/logo_centered"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="false"
            android:focusable="false"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="405dp"
            android:layout_height="200dp"
            android:text="Welcome, \n (Insert user username)"
            android:textColor="#FF000000"
            android:textSize="35dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/uploadedImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:contentDescription="@string/uploaded_image_desc" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/welcomeTextView"/>


        <ImageView
            android:id="@+id/uploadicon"
            android:layout_width="61dp"
            android:layout_height="56dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/upload_icon"
            android:background="@drawable/navbar_icon_selected_background"
            app:layout_constraintBottom_toTopOf="@id/background"
            app:layout_constraintEnd_toEndOf="parent"/>



        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/lightergreen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="51dp"
            android:layout_height="46dp"
            android:src="@drawable/ic_home"
            android:background="@drawable/navbar_icon_selected_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="30dp"
            />

        <ImageView
            android:id="@+id/folder"
            android:layout_width="51dp"
            android:layout_height="46dp"
            android:background="@drawable/ic_folder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/home"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="50dp" />

        <ImageView
            android:id="@+id/create"
            android:layout_width="50dp"
            android:layout_height="46dp"
            android:background="@drawable/create_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/person"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="50dp" />

        <ImageView
            android:id="@+id/person"
            android:layout_width="51dp"
            android:layout_height="46dp"
            android:background="@drawable/ic_person"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="30dp" />

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top" />

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
