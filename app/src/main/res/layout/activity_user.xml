<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A5ED9F"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/settingslogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/settings_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:text="Settings for \n TestingAccount"
            android:gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settingslogo" />


        <Button
            android:id="@+id/emailsettings"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:text="Change Email"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:backgroundTint="#D9FFB3"
            app:layout_constraintTop_toBottomOf="@id/welcomeTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/emailicon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/email_icon"
            android:paddingLeft="10dp"
            app:layout_constraintStart_toStartOf="@id/emailsettings"
            app:layout_constraintTop_toTopOf="@id/emailsettings"/>

        <Button
            android:id="@+id/blank2"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="Username"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:backgroundTint="#D9FFB3"
            app:layout_constraintTop_toBottomOf="@id/emailsettings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/usernameicon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/user_icon"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="@id/blank2"
            app:layout_constraintTop_toTopOf="@id/blank2" />

        <Button
            android:id="@+id/blank3"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:backgroundTint="#D9FFB3"
            app:layout_constraintTop_toBottomOf="@id/blank2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/passicon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/pass_icon"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="@id/blank3"
            app:layout_constraintTop_toTopOf="@id/blank3" />

        <Button
            android:id="@+id/blank4"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="Log Out"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:backgroundTint="#D9FFB3"
            app:layout_constraintTop_toBottomOf="@id/blank3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/logouticon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/logout_logo"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="@id/blank4"
            app:layout_constraintStart_toStartOf="@id/blank4"/>


        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/border_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="51dp"
            android:layout_height="46dp"
            android:src="@drawable/ic_home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="30dp"
            />

        <ImageView
            android:id="@+id/folder"
            android:layout_width="51dp"
            android:layout_height="46dp"
            android:background="@drawable/ic_folder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/home"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="50dp" />

        <ImageView
            android:id="@+id/create"
            android:layout_width="50dp"
            android:layout_height="46dp"
            android:background="@drawable/create_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/person"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="50dp" />

        <ImageView
            android:id="@+id/person"
            android:layout_width="51dp"
            android:layout_height="46dp"
            android:src="@drawable/ic_person"
            android:background="@drawable/navbar_icon_selected_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="30dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
