<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#89D31E"
    android:fillViewport="true"
    android:id="@+id/scrollView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:id="@+id/files"
            android:text="All Files"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="#FF000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="10dp"
            android:padding="15dp"
            android:fontFamily="@font/fredoka_regular"
            android:background="@drawable/semi_circle_corner"
            android:hint="Search your files"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/files" />

        <TextView
            android:id="@+id/albums"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Albums"
            android:textStyle="bold"
            android:textColor="#FF000000"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/search_bar"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/usernameicon"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="340dp"
            android:background="@drawable/semi_circle_left"
            android:drawableLeft="@drawable/imagesearch_icon"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/files" />

        <ImageView
            android:id="@+id/uploadedImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:contentDescription="@string/uploaded_image_desc" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/albums"/>

        <ImageView
            android:id="@+id/tabs"
            android:layout_width="61dp"
            android:layout_height="56dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/upload_icon"
            android:background="@drawable/navbar_icon_selected_background"
            app:layout_constraintBottom_toTopOf="@id/background"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Initially hidden icons -->
        <ImageView
            android:id="@+id/imageadd"
            android:layout_width="61dp"
            android:layout_height="56dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/addphoto"
            android:background="@drawable/navbar_icon_selected_background"
            app:layout_constraintBottom_toTopOf="@id/tabs"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/newfolder"
            android:layout_width="61dp"
            android:layout_height="56dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/addfolder"
            android:background="@drawable/navbar_icon_selected_background"
            app:layout_constraintBottom_toTopOf="@id/imageadd"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone" />

        <!-- Other UI elements -->

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/lightergreen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="51dp"
            android:layout_height="46dp"
            android:src="@drawable/ic_home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="30dp"
            />

        <ImageView
            android:id="@+id/folder"
            android:layout_width="51dp"
            android:layout_height="46dp"
            android:src="@drawable/ic_folder"
            android:background="@drawable/navbar_icon_selected_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/home"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="50dp" />

        <ImageView
            android:id="@+id/create"
            android:layout_width="50dp"
            android:layout_height="46dp"
            android:background="@drawable/create_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/person"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="50dp" />

        <ImageView
            android:id="@+id/person"
            android:layout_width="51dp"
            android:layout_height="46dp"
            android:background="@drawable/ic_person"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="30dp" />

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top" />

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
